        "/profile/description": {
            "post": {
                "tags": [
                    "profile"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "authorization",
                        "description": "JWT",
                        "type": "string"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "postId": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "description": "Change profile description",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/profile/picture": {
            "post": {
                "tags": [
                    "profile"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "authorization",
                        "description": "JWT",
                        "type": "string"
                    },
                    {
                        "in": "formData",
                        "name": "picture",
                        "required": true,
                        "type": "file"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "description": "Set profile picture"
            },
            "get": {
                "tags": [
                    "profile"
                ],
                "parameters": [
                    {
                        "in": "header",
