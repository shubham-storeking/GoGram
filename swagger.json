                            "properties": {
                                "date": {
                                    "type": "number",
                                    "description": "Time point, from which the performance is captured"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "posts": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "posts": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object",
                                                    "properties": {
                                                        "id": {
                                                            "type": "string"
                                                        },
                                                        "authorName": {
                                                            "type": "string"
                                                        },
                                                        "description": {
                                                            "type": "string"
                                                        },
                                                        "image": {
                                                            "type": "string"
                                                        },
                                                        "date": {
                                                            "type": "number"
                                                        },
                                                        "likes": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "date": {
                                                                        "type": "number"
                                                                    },
                                                                    "authorName": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            }
                                                        },
                                                        "comments": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "date": {
                                                                        "type": "number"
                                                                    },
                                                                    "authorName": {
                                                                        "type": "string"
                                                                    },
                                                                    "content": {
                                                                        "type": "string"
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "likes": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "date": {
                                                "type": "number"
                                            },
                                            "authorName": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "comments": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "date": {
                                                "type": "number"
                                            },
                                            "authorName": {
                                                "type": "string"
                                            },
                                            "content": {
